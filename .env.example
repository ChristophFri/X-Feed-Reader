# =============================================================================
# X Feed Reader — Environment Variables
# Copy this file to .env and fill in your values.
# =============================================================================

# --- CLI (existing) ---
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_CHAT_ID=your-chat-id-here
LMSTUDIO_URL=http://localhost:1234

# =============================================================================
# Web App (new — only needed if running the web SaaS)
# =============================================================================

# --- App ---
APP_URL=http://localhost:8000
DEBUG=true
SECRET_KEY=change-me-to-a-random-string

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql+asyncpg://xfeed:xfeed@localhost:5432/xfeed

# --- Redis ---
REDIS_URL=redis://localhost:6379

# --- JWT ---
JWT_SECRET=change-me-to-a-random-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_DAYS=7

# --- Encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())") ---
FERNET_KEY=change-me-generate-a-fernet-key

# --- X / Twitter OAuth 2.0 (https://developer.x.com/en/portal/dashboard) ---
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=http://localhost:8000/auth/callback

# --- Stripe (https://dashboard.stripe.com/apikeys) ---
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...

# --- Resend (https://resend.com/api-keys) ---
RESEND_API_KEY=re_...
EMAIL_FROM=briefings@xfeedreader.com

# --- LLM ---
DEFAULT_LLM_PROVIDER=openai
OPENAI_API_KEY=sk-...
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=
